<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create_table_user_progress" author="martins">
        <!-- Create the 'user_progress' table -->
        <createTable tableName="user_progress">
            <!-- Define columns -->
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <!-- Foreign key reference to 'user' table -->
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <!-- Foreign key reference to 'games' table -->
            <column name="task_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="completed_tasks" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="total_score" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="progress_percentage" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>
