<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create_table_achievement" author="martins">
        <!-- Create the 'achievement' table -->
        <createTable tableName="achievement">
            <!-- Define columns -->
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="achievement_description" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="criteria" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="reward_id" type="BIGINT"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
